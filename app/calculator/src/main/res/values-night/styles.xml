<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="background">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="resultStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NumberButtonStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">@color/smoke</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="FunctionButtonStyle" parent="NumberButtonStyle">
        <item name="android:backgroundTint">@color/light_orange</item>
    </style>

    <style name="ACButtonStyle" parent="NumberButtonStyle">
        <item name="android:backgroundTint">@color/light_yellow</item>
    </style>
</resources>